@model OdeToFoodCore.ViewModels.HomeIndexViewModel

@{
    ViewBag.Title = "Home Page";
}

<h1>@Model.CurrentMessage</h1>
@foreach (var item in Model.Restaurants)
{
    <p>@item.Name</p>
    //Custom plain HTML anchor tag
    <a href="/home/details/@item.Id">Details</a>
    //Old action links from MVC
    @Html.ActionLink("Go", "Details", new { id = item.Id })
    //Newer Core friendly tag helper
    <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id">More</a>
}
<a asp-action="Create" asp-controller="Home">Add New Restaurant</a>
